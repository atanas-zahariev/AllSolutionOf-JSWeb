<main id="create">
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#each options}}
                    <option value="{{key}}"{{#if isSelected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre">
                <label>Description:</label>
                <textarea id="description" name="description"></textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>