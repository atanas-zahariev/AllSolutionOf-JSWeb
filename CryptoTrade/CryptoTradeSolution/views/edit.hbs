<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form  method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{item.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imgUrl" value="{{item.imgUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{item.price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{item.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                {{#each modifiedOption}}
                <option value="{{key}}" {{#if isSelected}} selected {{/if}}>{{value}}</option>
                {{/each}}
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>