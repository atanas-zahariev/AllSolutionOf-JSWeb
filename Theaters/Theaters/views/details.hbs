<div class="container">

    <section class="details">
        <h1>{{item.title}}</h1>
        <div>
            <img src="{{item.imgUrl}}" />
        </div>
    </section>

    <section class="details">
        <h3>Theater Description</h3>
        <p>{{item.description}}</p>
        {{#if user}}
        <div class="buttons">
            {{#if isOwner}}
            <a class="btn delete" href="/theater/delete/{{item._id}}">Delete</a>
            <a class="btn edit" href="/theater/edit/{{item._id}}">Edit</a>
            {{else}}
                {{#if isTaked}}
                <span class="liked">You have already liked this play!</span>
                {{else}}
                <a class="btn like" href="/theater/action/{{item._id}}">Like</a>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </section>
</div>