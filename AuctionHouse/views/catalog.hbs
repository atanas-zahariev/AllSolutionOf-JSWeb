<!-- List of available auctions -->
{{#if items}}
<ul class="catalog cards">
{{#each items}}
    <li class="item">
        <header class="pad-med">
            <h2>{{title}}</h2>
        </header>

        <div class="align-center">
            <img class="img-thumb" src="{{imgUrl}}">
        </div>

        <footer class="align-center pad-med">
            <p>Current price: <strong>${{price}}</strong></p>
            <a class="action" href="/house/details/{{_id}}">See details</a>
        </footer>
    </li>
   {{/each}} 
</ul>

<!-- If there are no auctions to display -->
{{else}}
<div class="item pad-large align-center">
    <p>Nothing has been listed yet. Be the first!</p>
    <div>
        <a class="action" href="/house/create">Publish Auction</a>
    </div>
</div>
{{/if}}
</section>