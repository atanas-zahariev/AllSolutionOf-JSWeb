<!-- Details Page - Auction owner -->
<section id="catalog-section">

    <h1 class="item">
        {{item.title}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/house/edit/{{item._id}}">Edit</a>
            <a class="action pad-small f-left" href="/house/delete/{{item._id}}">Delete</a>
        </div>
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{item.imgUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{item.category}}</strong></p>
                <p>{{item.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{item.price}}</strong>
                    </div>

                    <div>
                        <!-- If there is a bidder -->
                        {{#if bider}}
                        Bid by <strong>{{bider.firstname}}</strong>
                        <a class="action pad-med cta" href="/house/userAction/{{item._id}}">Close Auction</a>
                        <!-- If there are no bids -->
                        {{else}}
                        No bids
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by Peter Jackson</footer>
    </div>

</section>