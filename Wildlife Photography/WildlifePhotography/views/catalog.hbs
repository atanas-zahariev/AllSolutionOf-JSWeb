<section id="catalog">
    <h1>All posts</h1>
    <div class="band">

        <!-- If there are posts for wildlife in the database display each of them -->
        {{#each items}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{imgUrl}}" alt="image_nature_1">
                <h1 class="text-shadow">Keyword: {{keyword}}</h1>
            </div>
            <div class="back">
                <h2>{{title}}</h2>
                <p>Description: {{description}}</p>
                <a href="/fotos/details/{{_id}}" class="details">Details</a>
            </div>
        </div>


        <!-- If there are still no posts for wildlife in the database display: -->
        {{else}}
        <div class="no-posts">
            <div class="no-posts-img">
                <! /-- Do not forget to change the path to the image, and remove this comment -- />
                <img src="/static/img/animal.jpg" alt="image_nature_3">
            </div>
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/each}}
    </div>
</section>